%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @invitation, class:'invite' do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = f.label :recipient_name, "Friend's Name"
            .row
              .col-sm-4
                = f.text_field :recipient_name, class: 'form-control'
          .form-group
            = f.label :recipient_email, "Friend's Email Address"
            .row
              .col-sm-2
            = f.text_field :recipient_email, class: 'form-control', class: 'form-control'
          .form-group
            = f.label :message
            .row
              .col-sm-4
            = f.text_area :message, class: 'span4', rows:6, placeholder: 'Please join this really cool site!'
        %fieldset.action
          %input(type="submit" value="Send Invitation" class="btn btn-default")
