-
%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        = link_to do
          - image_tag 'monk_large.jpg'
      .video_info.col-sm-3
        %header
          %h3= @video.name
          -
          - if @video.average_rating != nil
            %span Rating: #{@video.average_rating}/5.0
          <hr>
          = @video.description
%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for [@video,@review] do |f|
        = f.label :title
        = f.text_field :title

        = f.label :rating
        = f.select(:rating, options_for_select([5,4,3,2,1].map{|num| pluralize(num, 'Star')}))

        = f.label 'Review'
        = f.text_area :body

        = f.submit 'Post Review'

%hr
- if @reviews.count > 0
  %section.reviews.container
    .row
      .col-sm-10.col-sm-offset-1
        %header
          %h3 User reviews (#{@reviews.count})
          %br
          %br
        %article.review
          - @reviews.reverse.each do |review|
            %br
            %p
              %strong= review.title
              %br
              Rating: #{review.rating}
              %br
              #{User.find(review.user_id).name_first.capitalize} wrote:
              %br
              = review.body
- else
  There are no reviews yet.
