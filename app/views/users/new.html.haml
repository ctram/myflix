%section.content.clearfix
  %section.register.container
    .row
      .col-sm-10.col-sm-offset-1
        = form_for @user do |f|
          %header
            %h1
              Register
          .form-group
            = f.label :name_first do
              - "First Name"
            = f.text_field :name_first
          .form-group
            = f.label :name_last do
              - 'Last Name'
            = f.text_field :name_last
          .form-group
            = f.label :email
            = f.text_field :email
