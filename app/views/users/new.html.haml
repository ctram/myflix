%section.content.clearfix
  %section.register.container
    .row
      .col-sm-10.col-sm-offset-1
        = form_for @user do |f|
          %header
            %h1
              Register
          .form-group
            .col-sm-6
              = f.label :name_first, {class:'class=control-label col-sm-2'} do
                - "First Name"
              = f.text_field :name_first, {class:'form-control'}

          .form-group
            = f.label :name_last, {class:'class=control-label col-sm-2'} do
              - 'Last Name'
            = f.text_field :name_last

          .form-group
            = f.label :email, {class:'class=control-label col-sm-2'}
            = f.email_field :email

          .form-group
            = f.label :password,  {class:'class=control-label col-sm-2'}
            = f.password_field :password

          .form-group
            = f.label :password_confirmation,  {class:'class=control-label col-sm-2'}
            = f.password_field :password_confirmation
